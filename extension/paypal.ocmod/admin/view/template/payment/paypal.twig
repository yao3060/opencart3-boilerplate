{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form_payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
		{% endif %}
		<div class="card">
			<div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form action="{{ save }}" method="post" enctype="multipart/form-data" id="form_payment" data-oc-toggle="ajax">
					<ul class="nav nav-tabs">
						<li class="nav-item"><a href="#tab_general" data-bs-toggle="tab" class="nav-link active">{{ text_general }}</a></li>
						<li class="nav-item"><a href="#tab_order_status" data-bs-toggle="tab" class="nav-link">{{ text_order_status }}</a></li>
						<li class="nav-item"><a href="#tab_checkout_express" data-bs-toggle="tab" class="nav-link">{{ text_checkout_express }}</a></li>
						<li class="nav-item d-none"><a href="#tab_checkout_card" data-bs-toggle="tab" class="nav-link">{{ text_checkout_card }}</a></li>
						<li class="nav-item"><a href="#tab_checkout_message" data-bs-toggle="tab" class="nav-link">{{ text_checkout_message }}</a></li>
					</ul>
		  
					<div class="tab-content">
						<div class="tab-pane active" id="tab_general">
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_environment">{{ entry_environment }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_environment" id="input_environment" class="form-select">
											{% if (environment == 'production') %}
											<option value="production" selected="selected">{{ text_production }}</option>
											<option value="sandbox">{{ text_sandbox }}</option>
											{% else %}
											<option value="production">{{ text_production }}</option>
											<option value="sandbox" selected="selected">{{ text_sandbox }}</option>
											{% endif %}
										</select>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_connect">{{ entry_connect }}</label>
								<div class="col-sm-10">
									<div id="section_connect {% if client_id and secret and merchant_id %}d-none{% endif %}">
										<style type="text/css">
											#button_connect_ppcp::before {
												content: "";
												background: url(https://www.paypalobjects.com/webstatic/mktg/Logo/pp-logo-200px.png) 11px no-repeat #fff;
												background-size: 80px;
												display: table-cell;
												width: 100px;
												height: 42px;
												float: left;
												margin-right: 16px;
												border-bottom-left-radius: 5px;
												border-top-left-radius: 5px;
												margin-top: -12px;
											}
											#button_connect_express_checkout {
												display: inline;
												padding: 0px 0px;
												vertical-align: top;
												font-family: 'Open Sans', sans-serif;
												font-size: 12px;
												color: #1e91cf;
												background: none;
												border: none;
											}
											#button_connect_express_checkout::before {
												display:none;
											}
										</style>
										<a id="button_connect_ppcp" href="{{ configure_url[environment]['ppcp'] }}" target="_blank" data-paypal-button="PPLtBlue" data-paypal-onboard-complete="onBoardedCallback">{{ button_connect }}</a><br />
										<p>{{ help_checkout_express }}</p>
									</div>
									{% if client_id and secret and merchant_id %}
									<div id="section_disconnect">
										<p class="alert alert-info">{{ text_connect }}</p>
										<a id="button_disconnect" class="btn btn-danger">{{ button_disconnect }}</a>
									</div>
									{% endif %}
									<input type="hidden" name="payment_paypal_client_id" value="{{ client_id }}" id="input_client_id" />
									<input type="hidden" name="payment_paypal_secret" value="{{ secret }}" id="input_secret" />
									<input type="hidden" name="payment_paypal_merchant_id" value="{{ merchant_id }}" id="input_merchant_id" />
									<input type="hidden" name="payment_paypal_webhook_id" value="{{ webhook_id }}" id="input_webhook_id" />
								</div>
							</div>
							{% if client_id and secret and merchant_id %}
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_checkout_express_status">{{ entry_checkout_express_status }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_setting[checkout][express][status]" id="input_checkout_express_status" class="form-select">
											{% if setting['checkout']['express']['status'] %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
									<div class="form-text">{{ help_checkout_express_status }}</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_checkout_card_status">{{ entry_checkout_card_status }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_setting[checkout][card][status]" id="input_checkout_card_status" class="form-select d-none">
											{% if setting['checkout']['card']['status'] %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
									<div class="alert alert-warning alert-dismissible d-none"><i class="fa fa-exclamation-circle"></i> {{ help_checkout_card_status }}
										<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_checkout_message_status">{{ entry_checkout_message_status }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_setting[checkout][message][status]" id="input_checkout_message_status" class="form-select">
											{% if setting['checkout']['message']['status'] %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
									<div class="form-text">{{ help_checkout_message_status }}</div>
									<p class="alert alert-info" style="margin: 15px 0px 0px 0px">{{ text_message }}</p>
								</div>
							</div>
							{% endif %}
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_debug">{{ entry_debug }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_debug" id="input_debug" class="form-select">
											{% if debug %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_transaction_method">{{ entry_transaction_method }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_transaction_method" id="input_transaction_method" class="form-select">
											{% if (transaction_method == 'authorize') %}
											<option value="authorize" selected="selected">{{ text_authorization }}</option>
											<option value="capture">{{ text_sale }}</option>
											{% else %}
											<option value="authorize">{{ text_authorization }}</option>
											<option value="capture" selected="selected">{{ text_sale }}</option>
											{% endif %}
										</select>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_geo_zone">{{ entry_geo_zone }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_geo_zone_id" id="input_geo_zone" class="form-select">
											<option value="0">{{ text_all_zones }}</option>
											{% for geo_zone in geo_zones %}
											{% if geo_zone['geo_zone_id'] == geo_zone_id %}
											<option value="{{ geo_zone['geo_zone_id'] }}" selected="selected">{{ geo_zone['name'] }}</option>
											{% else %}
											<option value="{{ geo_zone['geo_zone_id'] }}">{{ geo_zone['name'] }}</option>
											{% endif %}
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_status" id="input_status" class="form-select">
											{% if status %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_sort_order">{{ entry_sort_order }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="payment_paypal_sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input_sort_order" class="form-control" />
									</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_currency_code">{{ entry_currency_code }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_currency_code" id="input_currency_code" class="form-select">
											{% for currency in setting['currency'] %}
											{% if currency['express_status'] %}
											{% if currency['code'] == currency_code %}
											<option value="{{ currency['code'] }}" selected="selected">{{ attribute(_context, currency['name']) }}</option>
											{% else %}
											<option value="{{ currency['code'] }}">{{ attribute(_context, currency['name']) }}</option>
											{% endif %}
											{% endif %}
											{% endfor %}
										</select>
									</div>
									<div class="form-text">{{ help_currency_code }}</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_currency_value">{{ entry_currency_value }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="payment_paypal_currency_value" value="{{ currency_value }}" placeholder="{{ entry_currency_value }}" id="input_currency_value" class="form-control" />
									</div>
									<div class="form-text">{{ help_currency_value }}</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_card_currency_code">{{ entry_card_currency_code }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_card_currency_code" id="input_card_currency_code" class="form-select">
											{% for currency in setting['currency'] %}
											{% if currency['card_status'] %}
											{% if currency['code'] == card_currency_code %}
											<option value="{{ currency['code'] }}" selected="selected">{{ attribute(_context, currency['name']) }}</option>
											{% else %}
											<option value="{{ currency['code'] }}">{{ attribute(_context, currency['name']) }}</option>
											{% endif %}
											{% endif %}
											{% endfor %}
										</select>
									</div>
									<div class="form-text">{{ help_card_currency_code }}</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_card_currency_value">{{ entry_card_currency_value }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="payment_paypal_card_currency_value" value="{{ card_currency_value }}" placeholder="{{ entry_card_currency_value }}" id="input_card_currency_value" class="form-control" />
									</div>
									<div class="form-text">{{ help_card_currency_value }}</div>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_smart_button">{{ entry_smart_button }}</label>
								<div class="col-sm-2">
									<a href="{{ configure_smart_button_url }}" target="_blank" class="btn btn-primary">{{ button_smart_button }}</a>
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab_order_status">
							{% for paypal_order_status in setting['order_status'] %}
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_order_status_{{ paypal_order_status['code'] }}">{{ attribute(_context, paypal_order_status['name']) }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_setting[order_status][{{ paypal_order_status['code'] }}][id]" id="input_{{ paypal_order_status['code'] }}_status" class="form-select">
											{% for order_status in order_statuses %}
											{% if order_status['order_status_id'] == paypal_order_status['id'] %}
											<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
											{% else %}
											<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
											{% endif %}
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
							{% endfor %}
						</div>
						<div class="tab-pane" id="tab_checkout_express">
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input_checkout_express_button_align">{{ entry_button_align }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<select name="payment_paypal_setting[checkout][express][button_align]" id="input_checkout_express_button_align" class="form-select">
											{% for button_align in setting['button_align'] %}
											{% if (button_align['code'] == setting['checkout']['express']['button_align']) %}
